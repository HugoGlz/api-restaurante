<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.mx.restaurante.beans.Modificador" table="tbl_modificadores">
        <id name="id" type="java.lang.Integer">
            <column name="id_modificador" />
            <generator class="identity" />
        </id>        
        <property name="descripcion" type="java.lang.String">
            <column name="descripcion"/>
        </property>
        <property name="precio" type="java.lang.Double">
            <column name="precio"/>
        </property>
        <property name="familia" type="java.lang.Integer">
            <column name="id_familia"/>
        </property>
        <property name="variante" type="java.lang.Integer">
            <column name="id_variante"/>
        </property>
        <property name="estatus" type="java.lang.Integer">
            <column name="estatus"/>
        </property>
    </class>
</hibernate-mapping>
