<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.mx.restaurante.beans.Personal" table="tbl_personal">
        <id name="id" type="java.lang.Integer">
            <column name="id_personal" />
            <generator class="identity" />
        </id>        
        <property name="nombre" type="java.lang.String">
            <column name="nombre"/>
        </property>
        <property name="apodo" type="java.lang.String">
            <column name="apodo"/>
        </property>
        <property name="tipo" type="java.lang.Integer">
            <column name="tipo"/>
        </property>
        <property name="nip" type="java.lang.Integer">
            <column name="nip"/>
        </property>
        <property name="fechaIngreso" type="java.util.Date">
            <column name="fecha_ingreso"/>
        </property>
        <property name="fechaBaja" type="java.util.Date">
            <column name="fecha_baja"/>
        </property>
        <property name="sueldoDiario" type="java.lang.Double">
            <column name="sueldo_diario"/>
        </property>
        <property name="estatus" type="java.lang.Integer">
            <column name="estatus"/>
        </property>
    </class>
</hibernate-mapping>
